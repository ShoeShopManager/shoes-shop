                                        placeholder="VD: 111/21 Hẻm A, đuờng B"
                                        class="input input-bordered w-full"
                                    />
                                </label>
                            </div>
                            <div class="col-span-12">
                                <div class="grid grid-cols-3 gap-5">
                                    <div>
                                        <label class="form-control w-full max-w-xs">
                                            <div class="label">
                                                <span class="label-text">Tỉnh thành</span>
                                            </div>
                                            <select id="province-select" class="select select-bordered"></select>
                                        </label>
                                    </div>
                                    <div>
                                        <label class="form-control w-full max-w-xs">
                                            <div class="label">
                                                <span class="label-text">Quận huyện</span>
                                            </div>
                                            <select id="district-select" class="select select-bordered"></select>
                                        </label>
                                    </div>
                                    <div>
                                        <label class="form-control w-full max-w-xs">
                                            <div class="label">
                                                <span class="label-text">Phường xã</span>
                                            </div>
                                            <select id="ward-select" class="select select-bordered"></select>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="mt-10">
